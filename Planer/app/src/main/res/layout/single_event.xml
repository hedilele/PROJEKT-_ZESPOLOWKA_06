<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/single_event"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_margin="7dp"
    app:cardBackgroundColor="#e3d3b9"
    app:cardCornerRadius="7dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:id="@+id/event_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/vintage_background"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title_event"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:background="@drawable/shape_event_title_hour"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:text="Sample Title"
            android:textColor="#4a4a4a"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/date_event"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/shape_event_title_hour"
            android:gravity="center"
            android:text="Oct 12, 2023"
            android:textColor="#4a4a4a"
            android:textSize="18sp"
            />
        <LinearLayout
            android:id="@+id/btn_edit_event"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/icon_edit"
                app:tint="@color/pr1_brown_warm" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edytuj"
                android:textSize="10dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_delete_event"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/icon_delete"
                app:tint="@color/pr1_brown_warm"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usuń"
                android:textSize="10dp"
                android:textStyle="bold"
                />
        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>
