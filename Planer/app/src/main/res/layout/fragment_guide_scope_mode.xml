<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".gui.pages.guide.GuideScopeModeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:padding="5dp"
        android:background="@drawable/shape_spinner"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Przegląd zadań:"
            android:textSize="18dp"
            android:textColor="@color/pr1_green_text"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tutaj trafiają zadania, które przeterminowały się i chcemy dać im drugie życie oraz te, które po dłuższym zastanowieniu możesz uznać za niepotrzebne. " />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Zaleca się zajrzeć tu przynajmniej raz dziennie - wieczorem lub rano. Dzięki temu Twoja lista zadań będzie zawsze aktualna i pozbędziesz się zbędnych zadań.
"
            />


    </LinearLayout>

</FrameLayout>