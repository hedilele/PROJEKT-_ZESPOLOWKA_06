<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/single_task"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/task_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#85a735"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >
            <TextView
                android:id="@+id/task_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:background="#a7c957"
                android:gravity="center|left"
                android:text="Przykladowy tytul"
                >
            </TextView>

            <TextView
                android:id="@+id/task_date"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:background="#6a994e"
                android:textSize="10dp"
                android:text="przykladowa data 21.11.12"
                android:gravity="bottom"
                >
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight = "10dp"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/priority"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_margin="5dp"
                android:background="@color/easy_green"
                >
            </ImageView>

            <ImageView
                android:id="@+id/trash"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/delete_icon"
                >
            </ImageView>



        </LinearLayout>

    </LinearLayout>



</androidx.cardview.widget.CardView>