<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".gui.pages.guide.GuideHomePageFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/shape_spinner"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Strona główna:"
                android:textColor="@color/pr1_green_text"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nawyki:"
                android:textColor="@color/brown_important_urgent_on" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/habits_show_all"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="start"
                    android:layout_margin="10dp"
                    android:background="@drawable/shape_navigartion_button2"
                    android:backgroundTint="@color/pr1_beige_background2"
                    android:src="@drawable/icon_eye" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dzięki tej ikonce można zobaczyć wszystkie swoje nawyki - zarówno te już wykonane jak i niewykonane. W tym trybie po naciśnięciu na nieaktywny nawyk można go przywrócić." />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp">

                <ImageView
                    android:id="@+id/habits_add"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="start"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/shape_navigartion_button2"
                    android:backgroundTint="@color/pr1_beige_background2"
                    android:src="@drawable/navigation_add" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dzięki tej ikonce można dodać nowy nawyk, który będzie pojawiał się na Twojej stronie głównej każdego nowego dnia." />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp">

                <ImageView
                    android:id="@+id/habits_delete"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/shape_navigartion_button2"
                    android:backgroundTint="@color/pr1_beige_background2"
                    android:src="@drawable/icon_remove" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dzięki tej ikonce można usunąć nawyk. Wystarczy nacisnąć ikonę minusa a następnie na nawyk. Pamiętaj aby odznaczyć ten przycisk!" />

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Lista zadań:"
                android:textColor="@color/brown_important_urgent_on" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tutaj będą znajdować się wszystkie dodane przez Ciebie zadania. Dzięki opracowanemu algorytmowi na pewno wyrobisz się ze wszystkim :)" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Dodawanie zadania:"
                android:textColor="@color/brown_important_urgent_on" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aby planer mógł optymalnie rozplanować Twoje zadania warto znać pojęcia takie jak:" />

            <TextView
                android:id="@+id/important"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" - ten atrybut wskazuje jak istotne jest dla Ciebie, aby to zadanie zostało wykoane. Czy konsekwencje jego niewykonania wpłyną na Twoje życie?" />


            <TextView
                android:id="@+id/urgent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" - ten atrybut wskazuje jak dużo czasu zostało do końca wykonania zadania. Im większa pilność tym mniej czasu zostało na jego wykonanie." />

        </LinearLayout>

    </FrameLayout>


</ScrollView>