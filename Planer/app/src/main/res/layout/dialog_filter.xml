<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--    data    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/home_background4"
            android:text="Data:"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:paddingHorizontal="20dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Od:"
                android:textColor="#99000000"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/date_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/calendar"
                android:backgroundTint="@color/black"
                android:scaleX="2"
                android:scaleY="2" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_weight="5"
                android:gravity="center"

                >

                <EditText
                    android:id="@+id/filter_date_start_d"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="dd"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="."
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/filter_date_start_m"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="mm"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="."
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/filter_date_start_y"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1.6"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="rrrr"
                    android:textSize="20dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:paddingHorizontal="20dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Do:"
                android:textColor="#99000000"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/btn_deadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/calendar"
                android:backgroundTint="@color/black"
                android:scaleX="2"
                android:scaleY="2" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_weight="5"
                android:gravity="center"

                >

                <EditText
                    android:id="@+id/filter_date_end_d"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="dd"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="."
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/filter_date_end_m"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="mm"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="."
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/filter_date_end_y"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1.6"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="rrrr"
                    android:textSize="20dp" />
            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#33e8cba8"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/to_this_day"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:paddingVertical="5dp"
                android:text="Chcę zrobić do danego dnia"
                android:textAlignment="center"
                android:textColor="@color/brown_important_urgent_on"
                android:textSize="12dp"
                android:textStyle="bold" />

            <!--                    android:background="#e8cba8"-->

            <TextView
                android:id="@+id/at_this_day"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:paddingVertical="5dp"
                android:text="Chcę zrobić danego dnia"
                android:textAlignment="center"
                android:textColor="#66000000"
                android:textSize="12dp"
                android:textStyle="bold" />


        </LinearLayout>


    </LinearLayout>

    <!--    czas trwania    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/home_background4"
            android:text="Czas trwania:"
            android:textSize="25dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingHorizontal="40dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/duration1"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_periodicity"
                    android:backgroundTint="@color/brown_important_urgent_off"
                    android:gravity="center"
                    android:text="5 min"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/duration2"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_periodicity"
                    android:backgroundTint="@color/brown_important_urgent_off"
                    android:gravity="center"
                    android:text="10 min"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/duration3"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_periodicity"
                    android:backgroundTint="@color/brown_important_urgent_off"
                    android:gravity="center"
                    android:text="30 min"
                    android:textColor="@color/black"
                    android:textStyle="bold" />


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingHorizontal="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/duration4"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_periodicity"
                    android:backgroundTint="@color/brown_important_urgent_off"
                    android:gravity="center"
                    android:text="1h"
                    android:textColor="@color/black"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/duration5"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_periodicity"
                    android:backgroundTint="@color/brown_important_urgent_off"
                    android:gravity="center"
                    android:text="2h"
                    android:textColor="@color/black"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/duration6"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_periodicity"
                    android:backgroundTint="@color/brown_important_urgent_off"
                    android:gravity="center"
                    android:text="2h+"
                    android:textColor="@color/black"
                    android:textStyle="bold" />


                <!--
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    />
        -->

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <!--    typ     -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/home_background4"
            android:text="Typ:"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="40dp">

            <TextView
                android:id="@+id/type1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/shape_periodicity"
                android:backgroundTint="@color/brown_important_urgent_off"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/type2"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/shape_periodicity"
                android:backgroundTint="@color/brown_important_urgent_off"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/type3"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/shape_periodicity"
                android:backgroundTint="@color/brown_important_urgent_off"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/type4"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/shape_periodicity"
                android:backgroundTint="@color/brown_important_urgent_off"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>

