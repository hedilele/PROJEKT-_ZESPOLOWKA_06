<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".gui.pages.guide.GuideFilterFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:padding="5dp"
        android:background="@drawable/shape_spinner"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filtrowanie (wyszukiwarka zadań):"
            android:textSize="18dp"
            android:textColor="@color/pr1_green_text"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tutaj możesz szybko znaleźć zadanie którego szukasz. Jeśli masz wolne 30 minut i chcesz je dobrze wykorzystać - sprawdź - może masz właśnie takie zadanie na swojej liście." />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Możesz dowolnie łączyć ze sobą kryteria wyszukiwania." />

    </LinearLayout>

</FrameLayout>