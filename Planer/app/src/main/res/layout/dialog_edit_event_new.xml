<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".gui.AdapterCalendarList">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:gravity="top"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/event_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/brown_important_urgent_on"
                android:hint="Nazwa Wydarzenia"
                android:inputType="textCapSentences"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="#99000000"
                android:textSize="25dp" />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center">


                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Początek:"
                    android:textColor="#99000000"
                    android:textSize="20dp" />

                <ImageButton
                    android:id="@+id/btn_begin_event"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/calendar"
                    android:backgroundTint="@color/pr1_brown_dark"
                    android:scaleX="2"
                    android:scaleY="2" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_weight="5"
                    android:gravity="center"

                    >

                    <EditText
                        android:id="@+id/tv_begin_event_day"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="dd"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="."
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/tv_begin_event_month"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="mm"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="."
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/tv_begin_event_year"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1.6"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="rrrr"
                        android:textSize="18dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text=" "
                    android:textSize="20dp" />

                <ImageButton
                    android:id="@+id/btn_begin_event_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/clock"
                    android:backgroundTint="@color/pr1_brown_dark"
                    android:scaleX="2"
                    android:scaleY="2" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_weight="5"
                    android:gravity="center"

                    >

                    <EditText
                        android:id="@+id/tv_begin_event_hour"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="hh"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text=":"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/tv_begin_event_min"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="mm"
                        android:textSize="18dp" />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center">


                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Koniec:"
                    android:textColor="#99000000"
                    android:textSize="20dp" />

                <ImageButton
                    android:id="@+id/btn_end_event"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/calendar"
                    android:backgroundTint="@color/pr1_brown_dark"
                    android:scaleX="2"
                    android:scaleY="2" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_weight="5"
                    android:gravity="center"

                    >

                    <EditText
                        android:id="@+id/tv_end_event_day"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="dd"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="."
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/tv_end_event_month"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="mm"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="."
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/tv_end_event_year"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1.6"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="rrrr"
                        android:textSize="18dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text=" "
                    android:textSize="20dp" />

                <ImageButton
                    android:id="@+id/btn_end_event_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/clock"
                    android:backgroundTint="@color/pr1_brown_dark"
                    android:scaleX="2"
                    android:scaleY="2" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_weight="5"
                    android:gravity="center"

                    >

                    <EditText
                        android:id="@+id/tv_end_event_hour"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="hh"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text=":"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/tv_end_event_min"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="mm"
                        android:textSize="18dp" />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Przypomnij: "
                    android:textColor="#99000000"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tv_reminder_15min"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_periodicity"
                        android:backgroundTint="@color/brown_important_urgent_off"
                        android:gravity="center"
                        android:text="15 min"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_remind_1h"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_periodicity"
                        android:backgroundTint="@color/brown_important_urgent_off"
                        android:gravity="center"
                        android:text="1h"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_remind_day"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_periodicity"
                        android:backgroundTint="@color/brown_important_urgent_off"
                        android:gravity="center"
                        android:text="1 dzień"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>






            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:gravity="bottom|start"
                    android:layout_height="50dp"
                    android:paddingHorizontal="5dp"
                    android:paddingTop="5dp"
                    android:text="Notatka: "
                    android:textColor="#99000000"
                    android:textSize="20dp"
                    />

                <EditText
                    android:id="@+id/tv_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="@color/brown_important_urgent_on"
                    android:ems="10"
                    android:gravity="start|top"
                    android:inputType="textMultiLine|textCapSentences"
                    android:textSize="15dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="bottom|start"

                    android:paddingHorizontal="5dp"
                    android:paddingTop="5dp"
                    android:text="Lokalizacja: "
                    android:textColor="#99000000"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/tv_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="@color/brown_important_urgent_on"
                    android:ems="10"
                    android:gravity="start|top"
                    android:inputType="textMultiLine|textCapSentences"
                    android:textSize="15dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel_edit_event"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:backgroundTint="@color/pr1_green_button"
            android:padding="10dp"
            android:text="Anuluj"
            android:textColor="#E6000000"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_done_edit_event"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:padding="10dp"
            android:text="edytuj"
            android:textColor="#E6000000"
            android:backgroundTint="@color/pr1_green_button"
            android:textSize="15dp" />

    </LinearLayout>


</LinearLayout>