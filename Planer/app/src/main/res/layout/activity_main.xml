            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#B3F3DEBA"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="45dp">

                <!--     ABC270           -->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_navigartion_button"
                    android:backgroundTint="#0D543C38">

                    <ImageView
                        android:id="@+id/button_menu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/navigation_menu"
                        app:tint="#543C38" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_navigartion_button"
                    android:backgroundTint="#0D543C38">


                    <ImageView
                        android:id="@+id/button_home"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/icon_house"
                        app:tint="#543C38" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_navigartion_button"
                    android:backgroundTint="#0D543C38">

                    <ImageView
                        android:id="@+id/button_calendar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/navigation_calendar"
                        app:tint="#543C38" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_navigartion_button"
                    android:backgroundTint="#0D543C38"
                    android:shadowRadius="10">

                    <ImageView
                        android:id="@+id/button_add"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/navigation_add"
                        app:tint="#543C38" />
                    />
                </LinearLayout>


            </LinearLayout>


